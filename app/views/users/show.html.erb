<div class="container">
  <div class="row">

    <div class="col-3">
      <!--left-sidebar-->
      <%= render 'shared/userinfo', user: @user %>
      <%= render 'shared/newbook', book: @book %>
    </div>

    <div class="col-10">
      <!--list of books created by user-->
      <div class="col-3">
      <h1>Books</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
