<table>
  <tbody>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td class="mb-2">
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
        <p class="ml-2"><%= book_comment.comment %></p>
      </td>
      <% if book_comment.user == current_user %>
      <td class="delete-comment">
        <p>
        <%= link_to 'Delete', book_book_comment_path(book_comment.book.id, book_comment.id), method: :delete, remote: true %>
        </p>
      </td>
      <% end %>
    </tr>
  <% end %>
 </tbody>
</table>