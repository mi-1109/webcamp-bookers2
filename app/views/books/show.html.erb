<div class="container">
  <div class="row">

      <div class="col-3 mr-5">
        <%= render partial: 'shared/sidebar', locals: { user: @user, book: @book } %>
      </div>

      <div class="col-8">
        <h1>Book detail</h1>
        <table>
          <tbody>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to @user.name, user_path(@user.id) %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(@book.id) %> </td>
                  <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure you'd like to delete?" %> </td>
                <% end %>
              </tr>
          </tbody>
        </table>
