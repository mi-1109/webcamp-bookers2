<%= render 'shared/error_book', book: @book %>

<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md8 col-lg-5">

    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <form>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      </form>
    <% end %>


    <p class="mt-3"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>

    </div>
  </div>
</div>