<%= render 'shared/error_book', book: @book %>

<!--左サイドバー-->
<%= render 'shared/userinfo', user: @user %>
<%= render 'shared/newbook', book: @book %>

<!--全ユーザ投稿一覧-->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag User.find(book.user_id), :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>