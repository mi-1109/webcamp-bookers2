<!-------------Bookの検索結果--------------->

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><a href="/users/<%= book.user_id %>"><%= attachment_image_tag User.find(book.user_id), :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></a></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
