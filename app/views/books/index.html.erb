<%= render 'shared/error_book', book: @book %>

<div class="container">
  <div class="row">

      <div class="col-md-3">
        <%= render partial: 'shared/sidebar', locals: { user: @user, book: @book } %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><a href="/users/<%= book.user_id %>"><%= attachment_image_tag User.find(book.user_id), :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %></a></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td>
                  <% if book.favorited_by?(current_user) %>
                    <p>
                      <%= link_to book_favorites_path(book), method: :delete do %>
                        ♥<%= book.favorites.count %> いいね
                      <% end %>
                    </p>
                    <% else %>
                    <p>
                      <%= link_to book_favorites_path(book), method: :post do %>
                        ♡<%= book.favorites.count %> いいね
                      <% end %>
                    </p>
                  <% end %>
                </td>
                <td><%= "#{book.book_comments.count} comment" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    　</div>
  </div>
</div>


