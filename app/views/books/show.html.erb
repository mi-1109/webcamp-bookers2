<!--左サイドバー-->
<%= render 'shared/userinfo', user: @user %>
<%= render 'shared/newbook', book: @book %>

<!--ユーザ投稿：詳細画面-->
<h1>Book detail</h1>

<table>
  <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %> </td>
        <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure you'd like to delete?" %> </td>
      </tr>
  </tbody>
</table>